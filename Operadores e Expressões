#include <stdio.h>

int main() {
    int num1, num2, num3;
    float soma, subtracao, multiplicacao, divisao;

    // 1️⃣ Entrada de dados
    printf("Digite o primeiro numero inteiro: ");
    scanf("%d", &num1);

    printf("Digite o segundo numero inteiro: ");
    scanf("%d", &num2);

    printf("Digite o terceiro numero inteiro: ");
    scanf("%d", &num3);

    // 2️⃣ Operações aritméticas
    soma = num1 + num2 + num3;
    subtracao = num1 - num2 - num3;
    multiplicacao = num1 * num2 * num3;

    // Tratamento para divisão por zero
    if (num2 != 0 && num3 != 0)
        divisao = (float) num1 / num2 / num3;
    else
        divisao = 0; // Evita erro

    printf("\n--- RESULTADOS ARITMÉTICOS ---\n");
    printf("Soma: %.2f\n", soma);
    printf("Subtracao: %.2f\n", subtracao);
    printf("Multiplicacao: %.2f\n", multiplicacao);
    if (num2 != 0 && num3 != 0)
        printf("Divisao: %.4f\n", divisao);
    else
        printf("Divisao: nao e possivel (divisao por zero)\n");

    // 3️⃣ Operadores relacionais
    printf("\n--- VERIFICACOES RELACIONAIS ---\n");
    if (num1 > num2)
        printf("O primeiro numero (%d) e maior que o segundo (%d).\n", num1, num2);
    else
        printf("O primeiro numero (%d) NAO e maior que o segundo (%d).\n", num1, num2);

    if (num2 < num3)
        printf("O segundo numero (%d) e menor que o terceiro (%d).\n", num2, num3);
    else
        printf("O segundo numero (%d) NAO e menor que o terceiro (%d).\n", num2, num3);

    // 4️⃣ Operadores lógicos
    printf("\n--- VERIFICACAO LOGICA ---\n");
    if (num1 > 0 && num2 % 2 == 0)
        printf("O primeiro numero e positivo E o segundo e par.\n");
    else
        printf("As condicoes logicas NAO foram satisfeitas.\n");

    printf("\nPrograma finalizado.\n");
    return 0;
}
